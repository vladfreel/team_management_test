.div{class: "min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 w-full"}
  .div{class: "max-w-md w-full space-y-8"}
    .div
      %img{class: "mx-auto h-12 w-auto", src: "https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg", alt: "Workflow"}
      %h2{class: "mt-6 text-center text-3xl font-extrabold text-gray-900"} Sign up for a new account
      %p{class: "mt-2 text-center text-sm text-gray-600"}
        Or #{link_to "sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false} }) do |f|
      .div{class: "mt-8 space-y-6"}
        .div{class: "rounded-md shadow-sm -space-y-px"}
          .div
            = f.label :first_name, class: "sr-only"
            = f.text_field :first_name, id: "first_name", autofocus: true, autocomplete: "first_name", placeholder: "First Name", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          .div
            = f.label :last_name, class: "sr-only"
            = f.text_field :last_name, id: "last_name", autocomplete: "last_name", placeholder: "Last Name", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          .div
            = f.label :username, class: "sr-only"
            = f.text_field :username, id: "username", autocomplete: "username", placeholder: "Username", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          .div
            = f.label :email, class: "sr-only", for: "email-address"
            = f.email_field :email, id: "email-address", autocomplete: "email", placeholder: "Email address", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          .div
            = f.label :password, for: "password", class: "sr-only"
            = f.password_field :password, id: "password", autocomplete: "new-password", placeholder: "Password", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          .div
            = f.label :password_confirmation, for: "password_confirmation", class: "sr-only"
            = f.password_field :password_confirmation, id: "password_confirmation", autocomplete: "new-password", placeholder: "Confirm Password", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
        .div{class: "actions"}
          = f.submit "Sign up", class: "actions group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"