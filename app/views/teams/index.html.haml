
%div.min-h-screen.flex.items-center.justify-center.w-full.py-12.px-4.sm:px-6.lg:px-8
  %div.max-w-7xl.mx-auto.py-6.sm:px-6.lg:px-8
    %div.flex.flex-col.justify-between.items-center.sm:flex-row
      %h2.text-3xl.font-extrabold.text-gray-900 Teams
      = link_to 'New Team', new_team_path, class: 'px-4 py-2 bg-indigo-600 text-white font-semibold rounded hover:bg-indigo-700'
    - if @teams.any?
      %div.mt-4.grid.grid-cols-1.gap-4.sm:grid-cols-2.md:grid-cols-3.lg:grid-cols-4
        - @teams.each do |team|
          %div.px-4.py-2.border.border-gray-300.rounded-md.shadow-md.hover:shadow-lg.transition.cursor-pointer
            %h3.text-lg.font-semibold.text-gray-900= team.name
            %p.mt-1.text-sm.text-gray-600= team.description
            %div.mt-2.flex.justify-start.items-center
              - if team.owner == current_user
                = link_to 'Show', team, class: 'px-3 py-1 bg-indigo-600 text-white font-semibold rounded hover:bg-indigo-700 mx-3'
                = link_to 'Edit', edit_team_path(team), class: 'px-3 py-1 bg-yellow-500 text-white font-semibold rounded hover:bg-yellow-600 mx-3'
                = link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, class: 'px-3 py-1 bg-red-600 text-white font-semibold rounded hover:bg-red-700 mx-3'
    - else
      %p No teams found.